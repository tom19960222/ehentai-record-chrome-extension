{
  "manifest_version": 2,

  "name": "EHentai record collector",
  "description": "This extension collects data when you exploring EHentai.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://exhentai.org/*", "https://e-hentai.org/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}